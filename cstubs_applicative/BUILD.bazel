ppx_executable(
    name = "_ppx.exe",
    main = "//bzl/ppx/exe:Driver",
    lazy_deps = ["@opam//pkg:bisect_ppx.runtime"],
    opts = [
        "-thread",
        "-linkall",
        "-predicates",
        "ppx_driver",
    ],
    deps = [
        "@opam//pkg:ppxlib",
        "@opam//pkg:bisect_ppx",
        "@ppx_version//src:ppx_version",
    ],
